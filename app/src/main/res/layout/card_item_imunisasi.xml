<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_imunisasi"
    android:backgroundTint="@color/primary_dark_098db3"
    android:paddingHorizontal="18dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNamaAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Abdullah Muchsin"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/background"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_colorize" />
        <TextView
            android:id="@+id/txtJenisImunisasi"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imunisasi POLIO"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_calendar" />
        <TextView
            android:id="@+id/txtTanggal"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minggu, 6 Oktober 2024"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/outline_location_on" />
        <TextView
            android:id="@+id/txtTempat"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posyandu Mangli"
            android:layout_weight="1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Belum"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:background="@drawable/shp_corner"
            android:layout_marginEnd="10dp"
            android:textColor="@color/primary_dark_098db3"
            android:textSize="17dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDetail"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Detail"
        android:textColor="@color/primary_dark_098db3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"/>
</LinearLayout>